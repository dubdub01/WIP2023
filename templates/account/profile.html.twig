{% extends "base.html.twig" %}

{% block title %}Modification du profile utilisateur
{% endblock %}

{% block body %}
	<div class="container">
		<h2>Email</h2>
		<div>
			{{app.user.email}}
		</div>
		<h2>username</h2>
		<div>
			{{app.user.username}}
		</div>
		<h2>Photo de profil</h2>
		<img src="/uploads/images/{{app.user.image}}" alt="avatar de {{app.user.email}}">
		<a class="btn btn-warning" href="{{path('account_modifimg')}}">Modification de la pp</a>

		<a class="btn btn-warning" href="{{path('account_password')}}">Modification de mot de passe</a>

		<a class="btn btn-warning" href="{{path('account_mail')}}">Modification de l'email</a>

		{% if app.user.worker | length > 0 %}
			<div class="col-md-4">
				<div class="card bg-light mb-3">
					<div class="card-header text-center">
						{% include "worker/show.html.twig" with {worker:app.user.worker} %}
					</div>
				</div>
			</div>
		{% else %}
			<div class="alert alert-warning">
				<p>
					<strong>{{app.user.username}}</strong>
					n'a pas de worker
				</p>
			</div>
		{% endif %}
		{% if app.user.company | length > 0 %}

			{% for company in app.user.company %}
				<div class="col-md-4">
					<div class="card bg-light mb-3">
						<div class="card-header text-center">
							{% include "company/show.html.twig" %}
						</div>
					</div>
				</div>
			{% endfor %}
		{% else %}
			<div class="alert alert-warning">
				<p>
					<strong>{{app.user.username}}</strong>
					n'a pas de company
				</p>
			</div>
		{% endif %}


	</div>
{% endblock %}
